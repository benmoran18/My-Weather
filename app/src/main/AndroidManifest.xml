<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.benmoran.myweather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/home"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.benmoran.myweather.activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.benmoran.myweather.activities.SetLocationActivity" android:label="@string/add_location" android:screenOrientation="portrait"></activity>
    </application>

</manifest>